            <Label Text="BaglantiTarih" />
            <Entry Text="{Binding BaglantiTarih}" />

            <Label Text="BaglantiSure" />
            <Entry Text="{Binding BaglantiSure}" />

            <Label Text="BaglantiAciklama" />
            <Entry Text="{Binding BaglantiAciklama}" />

            <Label Text="BaglantiDestekNo" />
            <Entry Text="{Binding BaglantiDestekNo}" />

            <Label Text="BaglantiUniq" />
            <Entry Text="{Binding BaglantiUniq}" />

            <Button Text="Kaydet" Clicked="OnSaveClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>