<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.RemoteConnectionsPage">

    <StackLayout>
        <ScrollView Orientation="Both">
            <Grid x:Name="RemoteConnectionsGrid" 
                  ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                  RowDefinitions="Auto">

            </Grid>
        </ScrollView>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Previous" Clicked="OnPreviousClicked" />
            <Label x:Name="PageInfoLabel" HorizontalOptions="Center" VerticalOptions="Center" />
            <Button Text="Next" Clicked="OnNextClicked" />
        </StackLayout>

        <Button Text="Export to Excel" Clicked="OnExportToExcelClicked" HorizontalOptions="Center" />
        <Button Text="Import from Excel" Clicked="OnImportFromExcelClicked" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>


